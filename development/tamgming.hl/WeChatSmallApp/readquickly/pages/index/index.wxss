swiper {
  margin-top: 10px;
}
.card {
  border-radius: 18px; 
  box-shadow: 10px 10px 5px #888888;
  position: absolute;
  right: 10%;
  width: 80%;
}
.pic{
  border-radius: 18px 18px 0 0;
}
.pic image {
  width: 100%;
  border-radius: 18px 18px 0 0;
}
.scroll_text{
    border-radius: 0 0 18px 18px;
}
.word{
  padding: 20rpx;
  border-radius: 0 0 18px 18px;
  color: rgba(0, 0, 0, 0.6);
  font-family:-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif;
}
/* 去掉滑条  */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.link_source{
  display: flex;
}
.link{
  padding-left:10rpx; 
  color: rgb(50, 144, 226);
  font-size: 32rpx;
  line-height: 32rpx;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
  width: 40%;
  display: inline-block;
}
.source{
  color: rgb(13, 94, 165);
  font-size: 32rpx;
  line-height: 32rpx;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
  width: 60%;
  display: inline-block;
}
.title{
  padding: 20rpx;
  color: #4d4156;
  font-size: 46rpx;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",Serif;
}
.time{
  padding-left: 10rpx;
  font-size: 33rpx;
  color: #9798b0;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",Serif;
}